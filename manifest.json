{
    "name": "Cusdis",
    "id": "cusdis",
    "packaging_format": 1,
    "description": {
        "en": "Lightweight, privacy-friendly alternative to Disqus",
        "fr": "Alternative légère et respectueuse de la vie privée à Disqus"
    },
    "version": "1.3.2~ynh1",
    "url": "https://cusdis.com/",
    "upstream": {
        "license": "GPL-3.0-only",
        "website": "https://cusdis.com/",
        "demo": "https://demo.example.com",
        "admindoc": "https://yunohost.org/packaging_apps",
        "userdoc": "https://yunohost.org/apps",
        "code": "https://github.com/djyde/cusdis"
    },
    "license": "GPL-3.0-only",
    "maintainer": {
        "name": "",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/example",
                "default": "/example"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "password",
                "type": "password"
            }
        ]
    }
}
